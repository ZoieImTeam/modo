<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_text_btn_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginLeft="@dimen/spacing_lv4"
        android:layout_marginRight="@dimen/spacing_lv4"
        android:layout_centerInParent="true"
        android:background="@mipmap/bg_erweima"
        android:gravity="center">


        <ImageView
            android:id="@+id/iv_qr_code"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerInParent="true"
            tools:background="@color/red" />

        <TextView
            android:id="@+id/tv_activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_qr_code"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="不容错过"
            android:textColor="@color/black"
            android:textSize="@dimen/spacing_lv3" />

    </RelativeLayout>


</RelativeLayout>