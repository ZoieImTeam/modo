<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <android.support.v7.widget.CardView
        android:id="@+id/item_atts_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/item_atts_cardview_r">

        <LinearLayout
            android:id="@+id/item_atts_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape_item_cardview_head_bg"
                android:paddingLeft="@dimen/item_atts_head_marlr"
                android:paddingRight="@dimen/item_atts_head_marlr">

                <org.srr.dev.view.CircleImageView
                    android:id="@+id/item_image_head"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/touxiang" />

                <TextView
                    android:id="@+id/item_atts_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/item_image_head"
                    android:layout_alignTop="@+id/item_image_head"
                    android:text="时崎狂三"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/item_atts_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/item_image_head"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/item_image_head"
                    android:text="this is jianjian's 老婆！"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/add_book" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:visibility="visible"
                android:background="@color/theme_color_blue"
                android:orientation="horizontal">



            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingBottom="@dimen/item_atts_head_marlr"
                android:paddingLeft="@dimen/item_atts_head_marlr"
                android:paddingRight="@dimen/item_atts_head_marlr"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/item_atts_image_frontcover"
                    android:layout_width="130dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/touxiang" />

                <TextView
                    android:id="@+id/item_atts_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/item_atts_image_frontcover"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="我是标题~~~"
                    android:textColor="@color/theme_textcolor"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/item_atts_tv_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/item_atts_tv_title"
                    android:layout_below="@+id/item_atts_tv_title"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="哦啥地方受到法律框架舒服多了介绍的水电费是的开发建设的风景水力发电开始懂了付款谁的客户来访收到了"
                    android:textColor="@color/theme_textcolor" />

                <TextView
                    android:id="@+id/item_atts_tv_clicknum"
                    style="@style/item_atts_tv_comment"
                    android:layout_alignTop="@+id/item_atts_tv_commentnumber"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/item_atts_tv_commentnumber"
                    android:layout_toStartOf="@+id/item_atts_tv_commentnumber"
                    android:text="点击数：1" />

                <TextView
                    android:id="@+id/item_atts_tv_commentnumber"
                    style="@style/item_atts_tv_comment"
                    android:layout_alignBottom="@+id/item_atts_image_frontcover"
                    android:layout_alignEnd="@+id/item_atts_tv_info"
                    android:layout_alignRight="@+id/item_atts_tv_info"
                    android:text="评论数：1" />
            </RelativeLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>
