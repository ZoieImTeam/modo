<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_height="137dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp">


    <ImageView
        android:id="@+id/item_edit_photo_effect_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/item_edit_photo_effect_text"
        android:scaleType="centerCrop"
        android:src="@drawable/text_avator" />

    <TextView
        android:id="@+id/item_edit_photo_effect_text"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:background="@color/app_main_color_other"
        android:gravity="center"
        android:text="原图"
        android:textColor="@color/white"
        android:textSize="@dimen/text_normal" />
</RelativeLayout>