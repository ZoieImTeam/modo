<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/title_layout"
        layout="@layout/title_text_btn_layout"/>

    <TextView
        android:id="@+id/tv_set_password_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout"
        android:textSize="@dimen/text_normal"
        android:text="使用手机号注册"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/login_input_bg"
        android:layout_below="@id/tv_set_password_tip"
        android:hint="@string/account_login_input_phone"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/login_text_tip_color"
        android:paddingLeft="16dp"
        />


    <TextView
        android:id="@+id/tv_login"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_password"
        android:background="@drawable/btn_blue_bg"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="下一步"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/text_big"
        />


    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_small"
        android:text="注册即表示同意《用户使用协议》"
        android:textColor="@color/login_text_tip_color"
        android:layout_below="@id/tv_login"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        />


</RelativeLayout>