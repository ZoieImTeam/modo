<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <View
        android:id="@+id/view_head"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:background="@mipmap/bg_title_top"
        />
    <include
        android:id="@+id/title_layout"
        layout="@layout/include_title_lucency"/>

    <org.srr.dev.view.CircleImageView
        android:id="@+id/civ_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/title_layout"
        android:layout_marginTop="8dp"
        android:src="@mipmap/head_defult_man"
        android:layout_marginLeft="16dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tv_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_small"
        tools:text="asdfsdfsdf"
        android:layout_below="@id/civ_head"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        />

    <TextView
        android:id="@+id/tv_edit_info"
        android:layout_width="96dp"
        android:layout_height="31dp"
        android:background="@drawable/btn_bg_luc"
        android:layout_centerHorizontal="true"
        android:text="编辑资料"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/text_tiny"
        android:layout_below="@id/tv_sign"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        />

    <FrameLayout
        android:id="@+id/fl_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_head"
        />





</RelativeLayout>