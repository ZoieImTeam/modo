<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="182dp"
                android:background="#00000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:background="#F2F0F0">

        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="center"
            android:background="#F2F0F0"
            android:text="@string/remind"/>

        <TextView
            android:id="@+id/delete_dialog_text"
            style="@style/text_color_size_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout3"
            android:layout_below="@+id/tvDialogTitle"
            android:background="#F2F0F0"
            android:gravity="center"
            />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_delete_dialog_bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGetContinue"
                style="@style/text_color_size_normal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/base_blue"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tvDialogCancel"
                style="@style/text_color_size_normal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F2F0F0"
                android:gravity="center"
                />


        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
