<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rc_dialog_text_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rc_dialog_text_content"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:text="@string/offline_tip_text"
            android:textColor="@color/text_color_black"
            android:textSize="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_black" />

        <TextView
            android:id="@+id/rc_dialog_text_button"
            style="@style/text_color_size_normal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/dialog_btn_text_confirm" />

    </LinearLayout>
</FrameLayout>
