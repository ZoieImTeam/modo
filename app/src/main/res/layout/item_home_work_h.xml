<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:padding="@dimen/spacing_lv2"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:background="@color/white"
    >

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:scaleType="centerCrop"
        tools:src="@mipmap/test_img_max"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_alignBottom="@+id/iv_cover"
        android:background="#50000000"
        />

    <org.srr.dev.view.CircleImageView
        android:id="@+id/civ_home"
        android:layout_width="@dimen/home_item_user_icon_size"
        android:layout_height="@dimen/home_item_user_icon_size"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/spacing_lv1"
        tools:src="@drawable/text_avator"/>


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/spacing_lv1"
        android:layout_toRightOf="@+id/civ_home"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/text_color_gray_item"
        android:textSize="@dimen/text_tiny"
        tools:text="灌篮高手同人漫画"/>


    <ImageView
        android:id="@+id/iv_see_num"
        android:layout_width="14dp"
        android:layout_height="26dp"
        android:layout_alignBottom="@+id/iv_cover"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/civ_home"
        android:src="@mipmap/btn_see_normal"
        />

    <TextView
        android:id="@+id/tv_see_num"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_alignBottom="@id/iv_see_num"
        android:layout_marginLeft="@dimen/spacing_lv"
        android:layout_toRightOf="@id/iv_see_num"
        android:gravity="center"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_tiny"
        tools:text="浏览数"
        />


    <TextView
        android:id="@+id/tv_zan_num"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_alignBottom="@id/iv_see_num"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/spacing_lv"
        android:gravity="center"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_tiny"
        tools:text="浏览数"
        />

    <ImageView
        android:id="@+id/iv_zan"
        android:layout_width="12dp"
        android:layout_height="26dp"
        android:layout_alignBottom="@id/iv_see_num"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/tv_zan_num"
        android:src="@mipmap/btn_zan_small_normal"
        />
</RelativeLayout>