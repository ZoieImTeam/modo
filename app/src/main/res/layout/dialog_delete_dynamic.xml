<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="144dp"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="53dp"
        android:background="#00000000">


        <TextView
            android:id="@+id/delete_dialog_text"
            style="@style/text_color_size_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout3"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_delete_dialog_top"
            android:gravity="center"
             />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@+id/linearLayout3"
            android:background="#424342" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_delete_dialog_bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/delete_dialog_cancel"
                style="@style/text_color_size_normal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                 />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#424342" />

            <TextView
                android:id="@+id/delete_dialog_center"
                style="@style/text_color_size_normal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
