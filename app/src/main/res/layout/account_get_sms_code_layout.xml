<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/title_layout"
        layout="@layout/title_text_btn_layout"/>

    <TextView
        android:id="@+id/tv_set_password_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout"
        android:textSize="@dimen/text_normal"
        android:text="使用手机号注册"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/login_input_bg"
        android:layout_below="@id/tv_set_password_tip"
        android:hint="@string/account_sms_code_input_phone"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/login_text_tip_color"
        android:paddingLeft="16dp"
        android:maxLength="6"
        />

    <TextView
        android:id="@+id/tv_register_getcode"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_gray_bg"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginRight="16dp"
        android:text="获取验证码"
        android:textColor="@color/white"
        android:textSize="@dimen/text_tiny"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_set_password_tip"
        />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_password"
        android:background="@drawable/btn_blue_bg"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="下一步"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/text_big"
        />


</RelativeLayout>